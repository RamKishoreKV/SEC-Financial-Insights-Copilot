PYTHONUNBUFFERED=1
LOG_LEVEL=INFO

# LLM providers
DEFAULT_PROVIDER=ollama
OLLAMA_MODEL=llama3
# Leave OPENAI unset when using Ollama-only
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Service URLs (overridden in Compose)
ORCHESTRATOR_URL=http://localhost:8001
RETRIEVAL_URL=http://localhost:8002
EVALUATOR_URL=http://localhost:8003

# Retrieval/vector store
CHROMA_PERSIST_DIR=./data/chroma
CHROMA_HOST=chroma
CHROMA_PORT=8000

# Feature flags
MOCK_MODE=false

# Frontend
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

